@model IEnumerable<TodoList_App.Models.Todo>
@using Newtonsoft.Json
<div class="table-responsive-sm">
    <table class="table table-hover">
        <thead>
            <tr class="text-center">
                <th>To-do</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <p class="text-primary h6">You have no Todo in list</p>
            }
            else
            {
                @foreach (var todo in Model)
                {
                    <tr>
                        <td>@todo.TodoTask</td>
                        <td>
                            <button class="btn btn-warning" data-url="@Url.Action("GetTodo")" data-toggle="ajax-model" data-target="#modalpop"><i class="fas fa-pen"></i></button>
                            <button class="btn btn-danger" onclick="showModal('@Url.Action("GetDeleteModalView")','#modal-placeholder','Delete Todo',@JsonConvert.SerializeObject(todo))"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
