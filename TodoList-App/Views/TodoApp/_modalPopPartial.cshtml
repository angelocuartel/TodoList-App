@model TodoList_App.Models.Todo

@{ 
    var urlPath = string.Empty;
}
<div asp-validation-summary="ModelOnly"></div>

<div class="modal fade" id="modalpop" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">@ViewBag.titleModal</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    @if(Model != null)
                   {
                <input hidden type="text" asp-for="TodoId" />
                urlPath = Url.Action("UpdateTodo");
                    }
                    else
                    {
                        urlPath = Url.Action("InsertTodo");
                    }
                    <label for="todo" class="form-label">What will you do</label>
                   <textarea asp-for="@Model.TodoTask" type="text" class="form-control" id="todo"></textarea>
                    <span class="text-danger" asp-validation-for="TodoTask"></span>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="InsertData('@urlPath')">Save</button>
            </div>
        </div>
    </div>
</div>

